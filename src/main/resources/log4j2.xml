<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!-- 
        User-facing console output (clean, no timestamps/levels)
        Used by ConsoleLogger for direct user interaction
        -->
        <Console name="USER_CONSOLE" target="SYSTEM_OUT">
            <PatternLayout pattern="%msg%n" />
        </Console>

        <!-- 
        Error console output (for warnings and errors)
        Shows highlighted level for critical messages
        -->
        <Console name="ERROR_CONSOLE" target="SYSTEM_ERR">
            <PatternLayout pattern="%highlight{[%level]} %msg%n" />
            <ThresholdFilter level="WARN" onMatch="ACCEPT" onMismatch="DENY" />
        </Console>

        <!-- 
        File appender for debug/audit trail
        Captures all INFO+ messages for troubleshooting
        -->
        <RollingFile name="FILE" fileName="logs/levain.log"
            filePattern="logs/levain.%d{yyyy-MM-dd}.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
            <Policies>
                <TimeBasedTriggeringPolicy />
            </Policies>
            <DefaultRolloverStrategy max="30" />
        </RollingFile>
    </Appenders>

    <Loggers>
        <!-- 
        Special logger for user-facing console output
        Usage: Logger console = LogManager.getLogger("CONSOLE");
        - INFO level messages go to clean console output
        - WARN/ERROR go to error console with highlighting
        - All messages also logged to file for audit
        -->
        <Logger name="CONSOLE" level="INFO" additivity="false">
            <AppenderRef ref="USER_CONSOLE" level="INFO" />
            <AppenderRef ref="ERROR_CONSOLE" level="WARN" />
            <AppenderRef ref="FILE" />
        </Logger>

        <!-- 
        Root logger for internal debug/audit messages
        - Only WARN+ to console (for unexpected errors)
        - All INFO+ to file
        -->
        <Root level="INFO">
            <AppenderRef ref="ERROR_CONSOLE" />
            <AppenderRef ref="FILE" />
        </Root>
    </Loggers>
</Configuration>