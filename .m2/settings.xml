<?xml version="1.0" encoding="UTF-8"?>
<!--
  Maven Settings for Nexus Repository
  
  Installation:
  1. Copy this file to ~/.m2/settings.xml (Linux/macOS) or %USERPROFILE%\.m2\settings.xml (Windows)
  2. Replace 'http://astronauta.biruta.net:31000' with your Nexus server URL
  3. If authentication is required, uncomment and configure the <servers> section
  
  This configuration redirects all Maven repository requests to your Nexus server.
-->
<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">

    <!-- 
    Server Credentials (Optional - only if your Nexus requires authentication)
    Uncomment this section and add your credentials
    
    <servers>
        <server>
            <id>nexus</id>
            <username>your-username</username>
            <password>your-password</password>
        </server>
    </servers>
    -->

    <!-- 
    Mirror Configuration
    This redirects all repository requests to Nexus
    -->
    <mirrors>
        <mirror>
            <id>nexus</id>
            <name>Nexus Repository Mirror</name>
            <!-- 
            IMPORTANT: Replace with your Nexus URL
            Common patterns:
            - http://nexus.example.com:8081/repository/maven-public
            - http://astronauta.biruta.net:31000/repository/maven-public
            - https://nexus.company.com/repository/maven-public
            -->
            <url>http://astronauta.biruta.net:31000/repository/maven-public</url>
            <!-- mirrorOf=* means mirror ALL repositories (including Maven Central, plugins, etc.) -->
            <mirrorOf>*</mirrorOf>
        </mirror>
    </mirrors>

    <!-- 
    Alternative: Mirror only specific repositories
    If you want to mirror only Maven Central but not other repositories:
    
    <mirrors>
        <mirror>
            <id>nexus</id>
            <name>Nexus Repository Mirror</name>
            <url>http://astronauta.biruta.net:31000/repository/maven-public</url>
            <mirrorOf>central</mirrorOf>
        </mirror>
    </mirrors>
    -->

</settings>